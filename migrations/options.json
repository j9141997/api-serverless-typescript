{
  "OptionsTables": {
    "Type": "AWS::DynamoDB:Table",
    "Properties": {
      "TableName": "options",
      "AttributeDefinitions": [
        {
          "AttributeName": "uuid",
          "AttributeType": "S"
        },
        {
          "AttributeName": "title",
          "AttributeType": "S"
        },
        {
          "AttributeName": "createdAt",
          "AttributeType": "S"
        },
        {
          "AttributeName": "updatedAt",
          "AttributeType": "S"
        }
      ],
      "KeySchema": [
        {
          "AttributeName": "uuid",
          "AttributeType": "HASH"
        },
        {
          "AttributeName": "title",
          "AttributeType": "RANGE"
        }
      ],
      "ProvisionedThroughput": {
        "ReadCapacityUnits": 1,
        "WriteCapacityUnits": 1
      }
    }
  }
}